<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Purple"
    tools:context=".FourthActivity">

    <ImageView
        android:id="@+id/clock0"
        android:layout_width="780dp"
        android:layout_height="520dp"
        android:layout_marginBottom="406dp"
        android:src="@drawable/clock0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b1"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/clock_choice1"
        android:textColor="@color/Purple3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b2"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="280dp"
        android:textColor="@color/Purple3"
        android:background="@drawable/clock_choice2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/b1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b3"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="280dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/clock_choice3"
        android:textColor="@color/Purple3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/b2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b4"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="112dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/Purple3"
        android:background="@drawable/clock_choice4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b5"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="112dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/Purple3"
        android:background="@drawable/clock_choice5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/b1"
        app:layout_constraintTop_toBottomOf="@id/b2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b6"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="112dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/Purple3"
        android:background="@drawable/clock_choice6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/b5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/czech_image"
        android:layout_marginEnd="200dp"
        android:textColor="@color/Purple3"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ictanbul_image"
        android:textColor="@color/Purple3"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="120dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Purple3"
        android:background="@drawable/london_image"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="180dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b10"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/Purple3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/moscow_image"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="560dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b11"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/parish_image"
        android:textColor="@color/Purple3"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="200dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b12"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/yerevan_image"
        android:textColor="@color/Purple3"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/but3"
        android:layout_width="388dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="48dp"
        android:text="@string/check"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/points"
        android:layout_width="53dp"
        android:layout_height="38dp"
        android:text="@string/_0"
        android:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>